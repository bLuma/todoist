<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/new_text_top_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cz.divisak.todoist.todoist.NewListActivity.NewListFragment">

    <TextView android:text="@string/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/list_title_tv"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_title_tv"
        android:layout_alignBaseline="@id/list_title_tv"
        android:singleLine="true"
        android:inputType="text"
        android:id="@+id/list_title"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/list_title"
        android:layout_below="@id/list_title"
        android:text="@string/add"
        android:id="@+id/submit_list"
        android:backgroundTint="@color/main_accent_pressed"
        android:background="@color/main_accent"
        android:textColor="@android:color/white"
        />
</RelativeLayout>
