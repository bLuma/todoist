<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".TodosListActivity" tools:ignore="MergeRootFrame"
    >

<fragment android:id="@+id/list_fragment"
android:layout_width="match_parent" android:layout_height="match_parent"
android:name="cz.divisak.todoist.todoist.TodosListFragment"
    />

<com.getbase.floatingactionbutton.FloatingActionButton
android:id="@+id/fab_new_list"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
fab:fab_icon="@drawable/ic_plus_list"
fab:fab_colorNormal="@color/main_accent"
fab:fab_colorPressed="@color/main_accent_pressed"
android:layout_alignParentRight="true"
android:layout_alignParentBottom="true"
android:layout_marginRight="24dp"
android:layout_marginBottom="24dp"
    />

    </RelativeLayout>