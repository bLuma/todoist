<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="actionModeBackground">@android:color/black</item>

        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <!-- <item name="android:actionBarWidgetTheme">@style/ActionBarWidget</item> -->

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/main_accent</item>
        <item name="colorControlActivated">@color/main_accent</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!--<item name="displayOptions">useLogo|showHome</item>
        <item name="android:displayOptions">useLogo|showHome</item>-->

        <item name="background">@color/main_accent</item>
        <item name="android:background">@color/main_accent</item>

        <item name="icon">@mipmap/ic_launcher</item>
        <item name="android:icon">@mipmap/ic_launcher</item>
        <!--<item name="logo">@mipmap/ic_launcher</item>
        <item name="android:logo">@mipmap/ic_launcher</item>-->
    </style>

    <style name="ActionBarWidget" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="activated" parent="AppTheme">
        <item name="android:background">@drawable/activatedbackground</item>
    </style>

    <style name="italicText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="checkboxStyle">

    </style>

</resources>
